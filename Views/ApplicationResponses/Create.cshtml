@model Project3.Models.ApplicationResponse

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Movie</h1>

<h4>Enter Movie Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form name="NewMovieCollector" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group row">
                <label asp-for="Category" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select id="Category" asp-for="Category" class="form-control">
                        <option value="">select</option>
                        <option value="Action/Adventure">Action/Adventure</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Drama">Drama</option>
                        <option value="Family">Family</option>
                        <option value="Horror/Suspense">Horror/Suspense</option>
                        <option value="Miscellaneous">Miscellaneous</option>
                        <option value="Television">Television</option>
                        <option value="VHS">VHS</option>
                    </select>
                </div>
                    

                    <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Title" id="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Year" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Year" id="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Director" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Director" id="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Rating" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="Rating" id="Rating" class="form-control">
                        <option value="">select</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Edited" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="Edited" id="Edited" class="form-control">
                        <option value="">select</option>
                        <option value="True">Yes</option>
                        <option value="False">No</option>
                    </select>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Lent_To" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Lent_To" id="Lent_To" class="form-control" />
                    <span asp-validation-for="Lent_To" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Notes" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Notes" id="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                
            </div>
                <br />
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Create" />
                </div>
</form>
    </div>
</div>

<br />

<div>
    <a class="btn btn-info" role="button" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
