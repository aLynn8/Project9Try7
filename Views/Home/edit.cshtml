@model Project3.Models.ApplicationResponse

<div>
    <p>Enter details about the movie you would like to edit.</p>
    <form name="NewMovieCollector" asp-action="EditMovies" method="post">
        <label asp-for="Category">Category: </label>
        <select id="Category" name="Category" asp-for="Category">
            <option value="">select</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
        <br />
        <label asp-for="Title">Title: </label>
        <input name="Title" id="Title" asp-for="Title" />
        <br />
        <label asp-for="Year">Year: </label>
        <input name="Year" id="Year" asp-for="Year" />
        <br />
        <label asp-for="Director">Director: </label>
        <input name="Director" id="Director" asp-for="Director" />
        <br />
        <label asp-for="Rating">Rating: </label>
        <select id="Rating" name="Rating" asp-for="Rating">
            <option value="">select</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited">Edited: </label>
        <select id="Edited" name="Edited" asp-for="Edited">
            <option value="">select</option>
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <br />
        <label asp-for="Lent_To">Lent_To: </label>
        <input name="Lent_To" id="Lent_To" asp-for="Lent_To" />
        <br />
        <label asp-for="Notes">Notes: </label>
        <input name="Notes" id="Notes" maxlength="25" asp-for="Notes" />
        <br />
        <br />
        <input type="submit" value="AddMovie" id="submitbutton" />
    </form>
</div>