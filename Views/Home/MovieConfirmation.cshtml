@{
    ViewBag.Header = "Movie Added Confirmation";
}

@model Project3.Models.ApplicationResponse
<!--Aubrey Farnbach Section 2 Group 1-->
<!--This page confirms that their movie has been added to the list, or suggests they watch Rcky if they entered Independence Day-->
<div>
    <!--This handles any combination of upper and lower case-->
    @if (Model.Title.ToUpper() == "INDEPENDENCE DAY")
    {
        <p>Try watching "Rocky IV" instead.</p>
        <p>It's more American.</p>
    }
    else
    {
        <h2>@Model.Title has been added to the list!</h2>
        <p>Category: @Model.Category</p>
        <p>Year: @Model.Year</p>
        <p>Director: @Model.Director</p>
        <p>Rating: @Model.Rating</p>
        <p>Edited: @Model.Edited</p>
        <p>Lent_To: @Model.Lent_To</p>
        <p>Notes: @Model.Notes</p>
    }

</div>